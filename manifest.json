{
  "manifest_version": 3,
  "name": "Quick Comments",
  "version": "1.0.0",
  "description": "Save and quickly insert frequently used comments",
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Quick Comments"
  },
  
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  
  "optional_permissions": [
    "activeTab"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "open_popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Quick Comments"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [{
    "resources": ["db.js"],
    "matches": ["<all_urls>"]
  }]
}